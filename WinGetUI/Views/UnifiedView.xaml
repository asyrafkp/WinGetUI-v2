<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinGetUI.Views.UnifiedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WinGetUI.Views"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel Margin="20">
        <TextBlock Text="Package Manager" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- Mode Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Mode:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
            <RadioButton x:Name="InstallModeRadio" Content="Install" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0" GroupName="MainMode" Checked="ModeRadio_Checked"/>
            <RadioButton x:Name="UpdateModeRadio" Content="Update" VerticalAlignment="Center" Margin="0,0,15,0" GroupName="MainMode" Checked="ModeRadio_Checked"/>
            <RadioButton x:Name="BrowseModeRadio" Content="Browse" VerticalAlignment="Center" Margin="0,0,15,0" GroupName="MainMode" Checked="ModeRadio_Checked"/>
            <RadioButton x:Name="SearchModeRadio" Content="Search" VerticalAlignment="Center" GroupName="MainMode" Checked="ModeRadio_Checked"/>
        </StackPanel>

        <!-- Search Box (for Install and Search modes) -->
        <StackPanel x:Name="SearchPanel" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Visible">
            <TextBox x:Name="SearchBox" Width="300" VerticalAlignment="Center" Margin="0,0,10,0" KeyDown="SearchBox_KeyDown" Padding="8"/>
            <ComboBox x:Name="FilterCombo" SelectedIndex="2" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                <ComboBoxItem>Search by Name</ComboBoxItem>
                <ComboBoxItem>Search by ID</ComboBoxItem>
                <ComboBoxItem>Search by Both</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="MatchCombo" SelectedIndex="0" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                <ComboBoxItem>Partial Match</ComboBoxItem>
                <ComboBoxItem>Exact Match</ComboBoxItem>
            </ComboBox>
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Padding="15,8" Margin="0,0,10,0"/>
            <Button x:Name="SearchAllButton" Content="Search All" Click="SearchAllButton_Click" Padding="15,8" Background="{DynamicResource InfoBrush}" Foreground="White" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Update View Options -->
        <StackPanel x:Name="UpdateViewPanel" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
            <TextBlock Text="View:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <RadioButton x:Name="UpdatableViewRadio" Content="Updatable Only" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0" GroupName="UpdateViewMode" Checked="UpdateViewModeRadio_Checked"/>
            <RadioButton x:Name="AllInstalledViewRadio" Content="All Installed" VerticalAlignment="Center" GroupName="UpdateViewMode" Checked="UpdateViewModeRadio_Checked"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="SelectAllButton" Content="Select All" Click="SelectAllButton_Click" Padding="10,5" Margin="0,0,5,0"/>
            <Button x:Name="DeselectAllButton" Content="Deselect All" Click="DeselectAllButton_Click" Padding="10,5" Margin="0,0,10,0"/>
            <TextBlock x:Name="SelectionStatus" Text="Selected: 0" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource InfoBrush}" FontWeight="Bold"/>
            <Separator Width="1" Margin="20,0,20,0"/>
            <TextBlock Text="Operation Mode:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <RadioButton x:Name="NormalModeRadio" Content="Normal" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0" GroupName="OperationMode"/>
            <RadioButton x:Name="SilentModeRadio" Content="Silent" VerticalAlignment="Center" GroupName="OperationMode"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Text="Ready" TextWrapping="Wrap" Margin="0,0,0,10" Foreground="{DynamicResource SuccessStatusBrush}"/>

        <!-- Local Table Filter -->
        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="Filter Table by ID:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBox x:Name="LocalIdFilterBox" Width="250" Padding="5" TextChanged="LocalIdFilterBox_TextChanged" HorizontalAlignment="Left"/>
            <TextBlock Text="(Local search)" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource DimTextBrush}" FontStyle="Italic"/>
        </DockPanel>

        <Grid x:Name="GridContainer">
            <DataGrid x:Name="PackagesGrid" Height="350" Background="{DynamicResource SecondaryBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                      Margin="0,0,0,10" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                      ItemsSource="{Binding Packages}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Select" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn x:Name="CurrentVersionColumn" Header="Current Version" Binding="{Binding Version}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn x:Name="AvailableVersionColumn" Header="Available Version" Binding="{Binding AvailableVersion}" Width="120" IsReadOnly="True" Visibility="Collapsed"/>
                    <DataGridTextColumn x:Name="SourceColumn" Header="Source" Binding="{Binding Source}" Width="100" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Background="#80000000" 
                  Margin="0,0,0,10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Width="50" Height="50">
                        <Ellipse Stroke="{DynamicResource TertiaryBrush}" StrokeThickness="4" />
                        <Path Stroke="{DynamicResource InfoBrush}" StrokeThickness="4" 
                              Data="M 25,2 A 23,23 0 0 1 48,25"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate" Angle="0" />
                            </Path.RenderTransform>
                            <Path.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360" Duration="0:0:1"
                                                             RepeatBehavior="Forever" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Path.Triggers>
                        </Path>
                    </Grid>
                    <TextBlock Text="Loading Packages..." 
                               Margin="0,10,0,0" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
            <Button x:Name="InstallButton" Content="Install Selected" Click="InstallButton_Click" Padding="15,8" Background="{DynamicResource SuccessStatusBrush}" Foreground="White" Margin="0,0,10,0" Visibility="Collapsed"/>
            <Button x:Name="UpdateButton" Content="Update Selected" Click="UpdateButton_Click" Padding="15,8" Background="{DynamicResource InfoBrush}" Foreground="White" Margin="0,0,10,0" Visibility="Collapsed"/>
            <Button x:Name="UninstallButton" Content="Uninstall Selected" Click="UninstallButton_Click" Padding="15,8" Background="{DynamicResource ErrorStatusBrush}" Foreground="White" Visibility="Collapsed"/>
        </StackPanel>
    </StackPanel>
</UserControl>
