<Window x:Class="WinGetUI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About WinGetUI" Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo and Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="/Assets/winget_logo.png" Width="64" Height="64" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="WinGetUI" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource InfoBrush}"/>
                <TextBlock x:Name="VersionText" Text="Version 2.0.0" FontSize="14" Foreground="{DynamicResource DimTextBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- Information Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Developer: Antigravity &amp; WinGetUI Contributors" FontSize="14" Margin="0,5" HorizontalAlignment="Center"/>
            <TextBlock Text="Created: January 2024" FontSize="14" Margin="0,5" HorizontalAlignment="Center"/>
            <TextBlock Text="Last Modified: January 2026" FontSize="14" Margin="0,5" HorizontalAlignment="Center"/>
            <TextBlock Text="A modern GUI for Windows Package Manager (winget)" FontSize="12" FontStyle="Italic" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center" Foreground="{DynamicResource DimTextBrush}"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click" Width="100" Height="35" HorizontalAlignment="Center" 
                Background="{DynamicResource SecondaryBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}"/>
    </Grid>
</Window>
